@model MvcStok.Models.Entity.TbCustomer
@{
    ViewBag.Title = "GetCustomer";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("UpdateCustomer","Customer",FormMethod.Post))
            {
                <div>
                    @Html.LabelFor(m=>m.CustomerId)
                    @Html.TextBoxFor(m=>m.CustomerId, new { @class="form-control"})
                </div>
                <br />
                <div>
                    @Html.LabelFor(m=>m.CustomerName)
                    @Html.TextBoxFor(m=>m.CustomerName,new{ @class="form-control"})
                </div>
                <br />
                <div>
                    @Html.LabelFor(m=>m.CustomerLastName)
                    @Html.TextBoxFor(m=>m.CustomerLastName,new { @class="form-control" })
                </div>
                <br />
                <div>
                    <button class="btn btn-warning">Müşteri Güncelle</button>
                </div>
            }


