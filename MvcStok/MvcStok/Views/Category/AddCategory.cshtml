@model MvcStok.Models.Entity.TbCategory
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Kategori Adı</label>
        @Html.TextBoxFor(m=>m.CategoryName,new {@class="form-control" })
        @Html.ValidationMessageFor(m => m.CategoryName, "", new {@style="color:red"})
    </div>
    <br />
    <button class="btn btn-info">Kategori Ekle</button>


</form>
