@model MvcStok.Models.Entity.TbProduct
@{
    ViewBag.Title = "GetProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("UpdateProduct","Product",FormMethod.Post))
            {
                <div>
                    @Html.LabelFor(m=>m.ProductId)
                    @Html.TextBoxFor(m=>m.ProductId,new {@class="form-control"})
                </div>
                <br />
                <div>
                    @Html.LabelFor(m=>m.ProductName)
                    @Html.TextBoxFor(m=>m.ProductName,new {@class="form-control"})
                </div>
                <br />
                <div>
                    @Html.LabelFor(m => m.TbCategory.CategoryName)
                    @Html.DropDownListFor(m => m .TbCategory.CategoryId, (List<SelectListItem>)ViewBag.Dgr, new { @class = "form-control" })
                </div>
                <br />
                <div>
                    @Html.LabelFor(m=>m.Price)
                    @Html.TextBoxFor(m => m.Price, new {@class="form-control"})
                </div>
                <br />
                <div>
                    <button class="btn btn-warning">Ürün Güncelle</button>
                </div>

            }

